{
  "name": "gulp-check-filesize",
  "version": "2.0.1",
  "description": "Logs the size of a given file and warns if a defined limit is exceeded",
  "keywords": [
    "gulpplugin, filesize, warning"
  ],
  "author": {
    "name": "Philipp Nowinski",
    "email": "philipp@sgalinski.de"
  },
  "repository": {
    "type": "git",
    "url": "https://gitlab.sgalinski.de/toolchain/gulp-check-filesize.git"
  },
  "scripts": {
    "test": "istanbul test _mocha --report html -- test/*.js --reporter spec",
    "coveralls": "istanbul cover ./node_modules/mocha/bin/_mocha --report lcovonly -- -R spec && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js && rm -rf ./coverage"
  },
  "dependencies": {
    "filesize": "^3.1.2",
    "gulp-util": "~2.2.0",
    "map-stream": "0.0.5",
    "through2": "*"
  },
  "devDependencies": {
    "mocha": "*",
    "coveralls": "*",
    "mocha-lcov-reporter": "*",
    "istanbul": "*",
    "event-stream": "*",
    "should": "~2.1.0"
  },
  "engines": {
    "node": ">=0.8.0",
    "npm": ">=1.2.10"
  },
  "license": "MIT"
}
